<UserControl x:Class="BlockIOInterface.DraggableNumeric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlockIOInterface"
             mc:Ignorable="d" 
             HorizontalContentAlignment="Stretch"
             d:DesignHeight="29.666"
             Loaded="UserControl_Loaded">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="LabelColumn"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Name="nameLabel" Content="Label:" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" MouseDown="nameLabel_MouseDown" MouseUp="nameLabel_MouseUp"/>
        <TextBox Name="valueBox" Grid.Column="1" HorizontalAlignment="Left" Margin="5,0,0,0" Text="0" TextWrapping="NoWrap" VerticalAlignment="Center" Width="40" TextChanged="valueBox_TextChanged" LostKeyboardFocus="valueBox_LostKeyboardFocus"/>
    </Grid>
</UserControl>
